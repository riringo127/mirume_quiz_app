<!-- title -->
<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="mt-5 text-center page_titile"><%= t '.title' %></h1>
    </div>
  </div>
</div>

<div class="mt-5">
  <%= render 'templates/quizzes' %>
  <div class="container mt-3">
    <div class="row align-items-center justify-content-center">
      <div class="col-lg-8 col-md-8 py-8">
        <div class="container-fluid">
          <div class="row retry_btn">
            <div class="col rounded mb-2 py-3 retry_btn_background">
              <%= link_to quizzes_path do %>
                <i class="fas fa-redo-alt me-2"></i>リトライする
              <% end %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col rounded mb-2 py-3 d-flex justify-content-center">
              <%= link_to dashboard_path, class: "back_link" do %>
                <i class="fas fa-angle-double-left me-1"></i>ダッシュボードに戻る
              <% end %>
            </div>
          <div>
        </div>
      </div>
    </div>
  </div>
</div>