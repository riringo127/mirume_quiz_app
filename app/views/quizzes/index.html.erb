<div class="mt-5">
  <% @quizzes.each_with_index do |quiz, i| %>
    <div class="container">
      <div class="row align-items-center justify-content-center">
        <div class="col-lg-8 col-md-8 py-8">
          <div class="card mb-3 border-0">
            <div class="card-body">
              <div class="d-flex flex-column bd-highlight my-2 justify-content-center">
                <div class="p-2 bd-highlight d-flex justify-content-center">
                  Q.<%= i + 1 %>
                </div>
                <div class="p-2 bd-highlight d-flex justify-content-center">この色のパーソナルカラータイプは？</div>
                <div class="p-2 bd-highlight d-flex justify-content-center">
                  <div class="color_box <%= quiz.color.css_class%>"></div>
                </div>
                <div class="p-2 bd-highlight d-flex justify-content-center">
                  <div class="d-flex flex-column bd-highlight my-2 justify-content-center">
                    <div class="p-2 bd-highlight d-flex justify-content-center">スプリング</div>
                    <div class="p-2 bd-highlight d-flex justify-content-center">サマー</div>
                    <div class="p-2 bd-highlight d-flex justify-content-center">オータム</div>
                    <div class="p-2 bd-highlight d-flex justify-content-center">ウィンター</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
