<div class="container d-flex flex-column bg_color">
  <div class="row align-items-center justify-content-center g-0">
    <div class="col-lg-5 col-md-8 py-8 py-xl-0">
      <!-- Card -->
        <div class="card border-0 mt-5">
          <!-- Card body -->
          <div class="card-body p-6">
            <div class="mb-4">
              <h1 class="mb-1 text-center"><%= t '.title' %></h1>
            </div>
            <!-- Form -->
            <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <div class="mb-3 form_input">
                <%= f.label :email, User.human_attribute_name(:email) %>
                <div class='form-control'><%= @user.email %></div>
              </div>
              <div class="mb-3 form_input">
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
              <div class="mb-3 form_input">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
              <div class="d-grid">
                <%= f.submit class: 'btn submit_btn text-white' %>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>

