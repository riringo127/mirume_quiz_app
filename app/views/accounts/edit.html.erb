<div class="container d-flex flex-column bg_color">
  <div class="row align-items-center justify-content-center g-0">
    <div class="col-lg-5 col-md-8 py-8 py-xl-0">
      <!-- Card -->
        <div class="card border-0 mt-5">
          <!-- Card body -->
          <div class="card-body p-6">
            <div class="mb-4 title">
              <h1 class="mb-1 text-center"><%= t '.title' %></h1>
            </div>
            <!-- Form -->
            <%= form_with model: current_user, url: account_path, local: true do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <div class="mb-3 form_input">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="mb-3 form_input">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control' %>
              </div>
              <div class="d-grid">
                <%= f.submit class: 'btn submit_btn text-white' %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

