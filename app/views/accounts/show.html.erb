<div class="container d-flex flex-column bg_color">
  <div class="row align-items-center justify-content-center">
    <div class="col-lg-5 col-md-8">
      <div class="card border-0 mt-5">
        <div class="card-body  p-6">
          <div class="mb-4 title">
            <h1 class="mb-1 text-center"><%= t '.title' %></h1>
          </div>
          <div class="user_info_table">
            <table class="table">
              <tr>
              <td class="label"><%= User.human_attribute_name(:name) %></td>
              <td><%= current_user.name %></td>
              </tr>
              <tr>
              <td class="label"><%= User.human_attribute_name(:email) %></td>
              <td><%= current_user.email %></td>
              </tr>
            </table>
          </div>
          <div class="d-flex justify-content-center">
            <%= link_to (t 'defaults.delete'), account_path(current_user), class: 'btn delete_btn px-4 me-3', method: :delete, data: { confirm: t('defaults.message.delete_confirm')} %>
            <%= link_to (t 'defaults.edit'), edit_account_path, class: 'btn edit_btn text-white px-4 ms-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>