<div class="container">
  <div class="row mt-5">
    <div class="col-12">
      <div class="card py-3 user_profile fadeUp">
        <div class="card-body text-center">
          <div class="d-flex flex-column bd-highlight">
            <div class="p-2 bd-highlight pt-4">こんにちは!</div>
            <div class="p-2 bd-highlight pb-5"><i class="fa-solid fa-user me-2"></i><%= @user.name %>さん</div>
            <hr class="my-4">
            <div class="p-2 bd-highlight pt-5"><i class="fas fa-award me-2"></i>総クリア数(全<%= @quizzes.length %>色)</div>
            <div class="p-2 bd-highlight pt-2 pb-3">
              <p id="total_count", data-num="<%= @count %>">0</p><span id="total_count_colors">colors<span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-4 mt-3">
      <div class="card border-0 py-3 quiz fadeUp">
        <div class="card-body text-center text-white">
          <i class="far fa-check-circle text-white"></i>
            <%= link_to "クイズに挑戦", quizzes_path, class: "text-white" %>
          <i class="fas fa-angle-right"></i>
        </div>
      </div>
    </div>
    <div class="col-md-4 mt-3">
      <div class="card border-0 py-3 review fadeUp">
         <div class="card-body text-center text-white">
          <i class="fas fa-pen text-white"></i>
            <%= link_to "復習する", mistakes_quizzes_path, class: "text-white" %>
          <i class="fas fa-angle-right"></i>
        </div>
      </div> 
    </div>
    <div class="col-md-4 mt-3">
      <div class="card border-0 py-3 index fadeUp">
        <div class="card-body text-center text-white">
          <i class="fas fa-list-ul text-white"></i>
            <%= link_to "色一覧", colors_path, class: "text-white" %>
          <i class="fas fa-angle-right"></i>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'dashboard' %>