<div class="container">
  <div class="row align-items-center justify-content-center g-0">
    <div class="col-lg-8 col-md-8 py-8 py-xl-0">
      <div class="card mb-2 border-0">
        <div class="card-body">
          <div class="container-fluid">
            <div class="row">
              <div class="col-2 color_sample d-flex align-items-center justify-content-center">
                <div class="circle">
                  <div class="circle-in <%= color.css_class %>"></div>
                </div>
              </div>
              <div class="col-8 color_name">
                <%= link_to color_path(color), class: "d-flex align-items-center" do %>
                  <%= color.name %>
                <% end %>
              </div>
              <div class="col-1 favorite_btn d-flex align-items-center justify-content-center">
                <%= render 'favorite_button', color: color %>
              </div>
              <div class="col-1 arrow d-flex align-items-center justify-content-center">
                <i class="fas fa-chevron-right"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
