<!-- title -->
<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="mt-5 text-center page_titile"><%= t '.title' %></h1>
    </div>
  </div>
</div>

<!-- tab -->
<% if params[:season] == "spring" %>
	<%= render 'tab_spring' %>
<% elsif params[:season] == "summer" %>
	<%= render 'tab_summer' %>
<% elsif params[:season] == "autumn" %>
	<%= render 'tab_autumn' %>
<% elsif params[:season] == "winter" %>
	<%= render 'tab_winter' %>
<% elsif request.url.include?('favorites') %>
	<%= render 'tab_favorites' %>
<% else %>
	<%= render 'tab_all' %> 
<% end %>

<% if @colors.present? %>
  <%= render @colors %>
<% else %>
  <div class="container mt-5">
    <div class="row">
      <div class="col d-flex justify-content-center no_result">
        <p><%= t('.no_result') %></p>
      </div>
    </div>
  </div>
<% end %>