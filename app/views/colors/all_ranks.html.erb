<!-- title -->
<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="mt-5 text-center page_titile"><%= t '.title' %></h1>
    </div>
  </div>
</div>

<!-- tab -->
<div class="container-fluid mb-3">
  <div class="row">
    <div class="col text-center review_tab_menu current">
      <%= link_to "みんなのランキング", all_ranks_colors_path %>
    </div>
    <div class="col text-center review_tab_menu">
      <%= link_to "あなたのランキング", my_ranks_colors_path %>
    </div>
  </div>
</div>

<% @colors.each_with_index do |color, i| %>
  <div class="container">
    <div class="row align-items-center justify-content-center g-0">
      <div class="col-lg-8 col-md-8 py-8 py-xl-0">
        <div class="card mb-2 border-0">
          <div class="card-body">
            <div class="container-fluid">
              <div class="row">
                <div class="col-3 arrow d-flex align-items-center justify-content-center">
                  <%= i + 1 %>位
                </div>
                <div class="col-2 color_sample d-flex align-items-center justify-content-center">
                  <div class="circle">
                    <div class="circle-in <%= color.css_class %>"></div>
                  </div>
                </div>
                <div class="col-7 color_name">
                  <%= link_to color_path(color), class: "d-flex align-items-center" do %>
                    <%= color.name %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>